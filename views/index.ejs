<!DOCTYPE html>
<html lang="en">
  <%- include('./layouts/head.ejs') -%>
  <body class="bg-light">
    <div class="container">
      <%- include('./layouts/navbar.ejs') -%>
      <main class="min-vh-100">
        <h1 class="text-success py-2 text-capitalize"><%= title %></h1>

        <% messages.forEach(msg => { %>
        <div class="mb-2">
          <h4><%= msg.user %>:</h4>
          <p class="text-secondary"><%= msg.text %></p>
        </div>

        <% }) %>
      </main>
      <%- include('./layouts/footer.ejs') -%>
    </div>
  </body>
</html>
